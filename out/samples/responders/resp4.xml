<responder>
<!-- one thread: respond to 'hello' with 'hi' on 'private' only when player name contains GM -->
<thread> 
	<if>
		<condition>
			<and>
				<message match="hello"/>
				<playername match="GM"/>
			</and>
		</condition>
		<say channel="private" player="$p" text="hi"/>
	</if>
</thread>

</responder>
